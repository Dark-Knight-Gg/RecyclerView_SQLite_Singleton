<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="20sp"
        android:textColor="#ff00"
        android:textStyle="bold"
        android:id="@+id/adapter_txtName"
        android:layout_width="220dp"
        android:layout_height="wrap_content"/>
    <TextView
        app:layout_constraintTop_toBottomOf="@id/adapter_txtName"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="18sp"
        android:textColor="#555454"
        android:layout_marginTop="10dp"
        android:id="@+id/adapter_txtDescribe"
        android:layout_width="220dp"
        android:layout_height="wrap_content"/>
    <ImageView
        android:src="@drawable/edit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/adapter_txtName"
        android:layout_marginTop="2dp"
        android:layout_marginStart="106dp"
        android:id="@+id/adapter_imgEdit"
        android:layout_width="15dp"
        android:layout_height="15dp"/>
    <ImageView
        android:src="@drawable/x"
        app:layout_constraintLeft_toRightOf="@id/adapter_imgEdit"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp"
        android:id="@+id/adapter_imgDelete"
        android:layout_marginTop="2dp"
        android:layout_width="15dp"
        android:layout_height="15dp"/>
    <TextView
        app:layout_constraintLeft_toRightOf="@id/adapter_txtName"
        app:layout_constraintTop_toBottomOf="@id/adapter_imgDelete"
        android:layout_marginTop="18dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="15dp"
        android:gravity="end"
        android:layout_width="120dp"
        android:textSize="18sp"
        android:id="@+id/adapter_Price"
        android:textStyle="italic"
        android:textColor="#ff00"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>